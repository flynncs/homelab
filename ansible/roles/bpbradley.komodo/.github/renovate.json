{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:all"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/defaults/main.yml$/",
                "README.md"
            ],
            "matchStrings": [
                "komodo_version: [\"']?(?<currentValue>.+?)[\"']?\\s+",
                "\\*\\*komodo(?:\\\\)?_version\\*\\*[^|\\r\\n]*\\|[^|\\r\\n]*?(?<currentValue>v?\\d+(?:\\.\\d+){1,3})"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "moghtech/komodo"
        }
    ]
}
